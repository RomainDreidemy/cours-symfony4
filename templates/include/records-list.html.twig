    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-128x128">
                    <img src="https://loremflickr.com/256/256/album,music/all?lock={{ r.id }}" alt="Image">
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <p>
                        <a href="{{ url('record_pageById', {'id': r.id}) }}" class="has-text-primary">
                            <strong>{{ r.title }}</strong>
                        </a>
                        <small>{{ r.releasedAt|date('d/m/Y') }}</small>
                        <br>
                        <small>
                            <strong>Artiste:</strong>
                            <a href="{{ url('artist_byId', {'id': r.artist.id }) }}">{{ r.artist.name }}</a>
                        </small><br>
                        <small>
                            <strong>Label:</strong>
                            <a href="{{ url('label_pageById', {'id': r.label.id }) }}">{{ r.label.name }}</a>
                        </small><br>
                        {{ r.description }}
                    </p>
                </div>
            </div>
        </article>
    </div>
